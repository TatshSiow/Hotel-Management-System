{% extends 'layout.twig' %}
{% block body %}
      <h1>訪客登記</h1>
        <div class="d-flex justify-content-start w-100">
            <div class="card col-md-4 w-100" style="width: 50%;">
                <div class="card-header">登記</div>
                
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <div class="form-floating mb-3">
                            </div>
                            <br>

                             <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="VDATE" name="VDATE" placeholder="message">
                                <label for="VDATE" class="form-label">拜訪時間</label>
                            </div>
                          
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="VNAME" name="VNAME" placeholder="message">
                                <label for="VNAME" class="form-label">名字</label>
                            </div>
                            <br>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="IDCARD" name="IDCARD" placeholder="message">
                                <label for="IDCARD" class="form-label">身分證</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="VROOM" name="VROOM" placeholder="message">
                                <label for="VROOM" class="form-label">拜訪房號</label>
                            </div>
                            <br>
        
                            <button type="submit" id="submit-message" class="btn btn-primary">回報</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    <div id="visitors-list"><div>
    <script src="/javascript/visitors.js"></script>
    <div class="col-sm-9">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>拜訪時間</th>
                    <th>名字</th>
                    <th>身分證</th>
                    <th>拜訪房號</th>
                </tr>
            </thead>
            <tbody>
                {% for row in rows %}
                <tr>
                    <td>{{row['ID']}}</td>
                    <td>{{row['VDATE']}}</td>
                    <td>{{row['VNAME']}}</td>
                    <td>{{row['IDCARD']}}</td>
                    <td>{{row['VROOM']}}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div id="visitors"><div>

<script>
    // 取得當前網路時間
    let now = new Date();
    let year = now.getFullYear();
    let month = now.getMonth() + 1;
    let date = now.getDate();
    let hour = now.getHours();
    let minutes = now.getMinutes();
    let seconds = now.getSeconds();

    // 格式化時間字串
    if (hour < 10) {
        hour = "0" + hour;
    }
    if (minutes < 10) {
        minutes = "0" + minutes;
    }
    if (seconds < 10) {
        seconds = "0" + seconds;
    }
    let formattedDate = year + "-" + month + "-" + date + " " + hour + ":" + minutes + ":" + seconds;

    // 將格式化後的時間字串填入表單欄位
    document.getElementById("VDATE").value = formattedDate;
</script>

{% endblock %}